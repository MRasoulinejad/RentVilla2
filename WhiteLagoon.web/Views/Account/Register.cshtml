@model RegisterVM

<div class="container" style="min-height: calc(100vh - 150px); display: flex; justify-content: center; align-items: center;">
    <div class="card bg-dark text-light shadow-lg border-0 rounded-5" style="width: 500px;">
        <div class="card-body p-4">
            <div class="text-center mb-3">
                <i class="bi bi-person-plus-fill text-warning" style="font-size: 3rem;"></i>
                <h3 class="mt-2">Create Account</h3>
                <p class="text-muted">Join RentVilla today</p>
            </div>
            <form method="post">
                <input asp-for="RedirectUrl" hidden />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control bg-transparent text-light border-secondary" placeholder="name@example.com" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Name" class="form-label">Full Name</label>
                        <input asp-for="Name" class="form-control bg-transparent text-light border-secondary" placeholder="Your Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control bg-transparent text-light border-secondary" placeholder="Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control bg-transparent text-light border-secondary" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control bg-transparent text-light border-secondary" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-warning w-100 btn-lg mb-3">Register</button>

                <div class="text-center">
                    <span class="text-muted">Already have an account? </span>
                    <a asp-action="Login" asp-route-returnUrl="@Model.RedirectUrl" class="text-info">Log in here</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
