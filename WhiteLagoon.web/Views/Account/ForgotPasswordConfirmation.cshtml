@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container" style="min-height: calc(100vh - 150px); display: flex; justify-content: center; align-items: center;">
    <div class="card bg-dark text-light shadow-lg border-0 rounded-5" style="width: 500px;">
        <div class="card-body p-4 text-center">
            <i class="bi bi-envelope-check-fill text-warning" style="font-size: 3rem;"></i>
            <h3 class="mt-3">Check Your Email</h3>
            <p class="text-muted mt-2">
                If you have an account with us, we have sent a password reset link to your email address.<br />
                Please check your email (including spam folder) and click on the link to reset your password.
            </p>
            <a asp-action="Login" class="btn btn-warning w-100 btn-lg mt-3">Return to Login</a>
        </div>
    </div>
</div>
