@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Check Your Email</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-success">
                    <p>If you have an account with us, we have sent a password reset link to your email address.</p>
                    <p>Please check your email (including spam folder) and click on the link to reset your password.</p>
                </div>
                <div class="text-center">
                    <a asp-action="Login" class="btn btn-primary">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>