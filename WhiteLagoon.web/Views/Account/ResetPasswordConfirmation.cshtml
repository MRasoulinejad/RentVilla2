@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<div class="container" style="min-height: calc(100vh - 150px); display: flex; justify-content: center; align-items: center;">
    <div class="card bg-dark text-light shadow-lg border-0 rounded-5" style="width: 500px;">
        <div class="card-body p-4 text-center">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
            <h3 class="mt-3">Password Reset Complete</h3>
            <p class="text-muted mt-2">
                Your password has been reset successfully.<br />
                You can now log in with your new password.
            </p>
            <a asp-action="Login" class="btn btn-warning w-100 btn-lg mt-3">Login</a>
        </div>
    </div>
</div>
