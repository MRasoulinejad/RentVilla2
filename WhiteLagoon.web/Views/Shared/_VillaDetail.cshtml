@model Villa

<div class="row">
    <div class="col-12 col-md-5">
        <img src="@Model.ImageUrl" class="img-fluid rounded-4 shadow-lg" alt="@Model.Name" />
    </div>
    <div class="col-12 col-md-7">
        <div class="p-3">
            <h2 class="text-warning mb-3">@Model.Name</h2>
            <p class="text-muted">
                @Html.Raw(Model.Description)
            </p>

            @if (Model.VillaAmenity != null && Model.VillaAmenity.Count() > 0)
            {
                <h5 class="text-info mt-4">Amenities</h5>
                <ul class="list-group list-group-flush">
                    @foreach (var amenity in Model.VillaAmenity)
                    {
                        <li class="list-group-item bg-dark text-light border-secondary">
                            <i class="bi bi-check-circle text-success"></i> @amenity.Name
                        </li>
                    }
                </ul>
            }

            <div class="mt-4">
                <div class="d-flex justify-content-between">
                    <span class="text-light">Max Occupancy: <strong>@Model.Occupancy adults</strong></span>
                    <span class="text-light">Size: <strong>@Model.Sqft sqft</strong></span>
                </div>
                <div class="mt-2">
                    <h4 class="text-warning fw-bold">
                        USD @Model.Price.ToString("c") <small class="text-muted">/ night</small>
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>