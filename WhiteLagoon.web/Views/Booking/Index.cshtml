@{
    var status = Context.Request.Query["status"];

    var approved = "";
    var pending = "";
    var checkedIn = "";
    var completed = "";
    var cancelled = "";

    switch (status)
    {
        case SD.StatusPending:
            pending = "active";
            break;
        case SD.StatusApproved:
            approved = "active";
            break;
        case SD.StatusCheckedIn:
            checkedIn = "active";
            break;
        case SD.StatusCompleted:
            completed = "active";
            break;
        case SD.StatusCancelled:
            cancelled = "active";
            break;
        default:
            break;
    }
}

<div class="container py-5">
    <div class="card bg-dark text-light shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient bg-info rounded-top-4 py-3">
            <h2 class="text-center text-white">Booking List</h2>
        </div>
        <div class="card-body p-4">
            <div class="d-flex justify-content-center mb-4">
                <div class="btn-group" role="group">
                    <a asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusPending"
                       class="btn btn-outline-info @(pending == "active" ? "active" : "")">
                        @SD.StatusPending
                    </a>
                    <a asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusApproved"
                       class="btn btn-outline-info @(approved == "active" ? "active" : "")">
                        @SD.StatusApproved
                    </a>
                    <a asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusCheckedIn"
                       class="btn btn-outline-info @(checkedIn == "active" ? "active" : "")">
                        @SD.StatusCheckedIn
                    </a>
                    <a asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusCompleted"
                       class="btn btn-outline-info @(completed == "active" ? "active" : "")">
                        @SD.StatusCompleted
                    </a>
                    <a asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusCancelled"
                       class="btn btn-outline-info @(cancelled == "active" ? "active" : "")">
                        @SD.StatusCancelled
                    </a>
                </div>
            </div>
            <table id="tblBookings" class="table table-dark table-hover table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Check In Date</th>
                        <th>Nights</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/booking.js"></script>
}