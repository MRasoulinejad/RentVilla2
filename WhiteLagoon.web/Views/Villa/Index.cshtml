@model IEnumerable<Villa>

<div class="container py-5">
    <div class="card bg-dark text-light shadow-lg rounded-4 border-0">
        <div class="card-header py-4 rounded-top-4" style="background: linear-gradient(135deg, #0d6efd, #6610f2);">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white mb-0">Villa List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a asp-controller="Villa" asp-action="Create" class="btn btn-outline-info">
                        <i class="bi bi-plus-circle"></i> Create New Villa
                    </a>
                </div>
            </div>

            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Sqft</th>
                        <th>Occupancy</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Price</td>
                            <td>@obj.Sqft</td>
                            <td>@obj.Occupancy</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@obj.Id"
                                       class="btn btn-sm btn-outline-warning mx-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@obj.Id"
                                       class="btn btn-sm btn-outline-danger mx-1">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
