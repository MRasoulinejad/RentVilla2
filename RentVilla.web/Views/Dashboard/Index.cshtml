<div class="container py-5" style="min-height: calc(100vh - 150px);">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="text-light text-center">Dashboard</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-xl-4 mt-3">
            <div class="card bg-dark text-light shadow-lg rounded-4 border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-0">Total Bookings</p>
                            <h4 class="my-1"><span id="spanTotalBookingCount">XX</span></h4>
                        </div>
                        <div id="totalBookingsRadialChart" data-colors='["--bs-success"]'></div>
                    </div>
                    <p class="text-muted mt-3 mb-0" id="sectionBookingCount"></p>
                    <div class="text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-4 mt-3">
            <div class="card bg-dark text-light shadow-lg rounded-4 border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-0">Total Users</p>
                            <h4 class="my-1"><span id="spanTotalUserCount">XX</span></h4>
                        </div>
                        <div id="totalUserRadialChart" data-colors='["--bs-warning"]'></div>
                    </div>
                    <p class="text-muted mt-3 mb-0" id="sectionUserCount"></p>
                    <div class="text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-4 mt-3">
            <div class="card bg-dark text-light shadow-lg rounded-4 border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-0">Total Revenue</p>
                            <h4 class="my-1"><span id="spanTotalRevenueCount">XX</span></h4>
                        </div>
                        <div id="totalRevenueRadialChart" data-colors='["#F0006B"]'></div>
                    </div>
                    <p class="text-muted mt-3 mb-0" id="sectionRevenueCount"></p>
                    <div class="text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-xl-8 mt-3">
            <div class="card bg-dark text-light shadow-lg rounded-4 border-0">
                <div class="card-body">
                    <p class="text-muted mb-3">New Members & Bookings (Past 30 Days)</p>
                    <div id="newMembersAndBookingsLineChart" data-colors='["--bs-warning","--bs-primary"]'></div>
                    <div class="text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-xl-4 mt-3">
            <div class="card bg-dark text-light shadow-lg rounded-4 border-0">
                <div class="card-body">
                    <p class="text-muted mb-3">Customer Bookings</p>
                    <div id="customerBookingsPieChart" data-colors='["--bs-warning","--bs-primary"]'></div>
                    <div class="text-center chart-spinner" style="display:none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/dashboard/radialChart.js"></script>
    <script src="~/js/dashboard/getTotalBookingsRadial.js"></script>
    <script src="~/js/dashboard/getTotalUserRadial.js"></script>
    <script src="~/js/dashboard/getTotalRevenueRadial.js"></script>
    <script src="~/js/dashboard/getCustomerAndBookingLineChart.js"></script>
    <script src="~/js/dashboard/getCustomerBookingPieChart.js"></script>
}
