@model AmenityVM

<div class="container py-5">
    <div class="card bg-dark text-light shadow-lg rounded-4 border-0">
        <div class="card-header py-4 rounded-top-4" style="background: linear-gradient(135deg, #0d6efd, #6610f2);">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Create Amenity</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
                <div class="col-md-12">
                    <div class="p-3">
                        <div class="form-floating mb-3">
                            <select asp-for="@Model.Amenity.VillaId" asp-items="@Model.VillaList"
                                    class="form-select bg-secondary text-black border-secondary">
                                <option disabled selected>--Select Villa--</option>
                            </select>
                            <label asp-for="Amenity.VillaId" class="ms-2">Villa</label>
                            <span asp-validation-for="Amenity.VillaId" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Amenity.Name" class="form-control bg-transparent text-light border-secondary" />
                            <label asp-for="Amenity.Name" class="ms-2">Name</label>
                            <span asp-validation-for="Amenity.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Amenity.Description" class="form-control bg-transparent text-light border-secondary" />
                            <label asp-for="Amenity.Description" class="ms-2">Description</label>
                            <span asp-validation-for="Amenity.Description" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Create
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Amenity" asp-action="Index" class="btn btn-outline-secondary w-100">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
