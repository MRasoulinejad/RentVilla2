@model ForgotPasswordVM

<div class="container" style="min-height: calc(100vh - 150px); display: flex; justify-content: center; align-items: center;">
    <div class="card bg-dark text-light shadow-lg border-0 rounded-5" style="width: 450px;">
        <div class="card-body p-4">
            <div class="text-center mb-3">
                <i class="bi bi-key-fill text-warning" style="font-size: 3rem;"></i>
                <h3 class="mt-2">Forgot Password</h3>
                <p class="text-muted">Reset your account password</p>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control bg-transparent text-light border-secondary" placeholder="name@example.com" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning w-100 btn-lg mb-3">Submit</button>

                <div class="text-center">
                    <a asp-action="Login" class="text-info d-block mb-1">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
